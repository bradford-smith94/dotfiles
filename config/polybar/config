; Bradford Smith
; ~/.config/polybar/config
; updated: 11/28/2017
; ========================

[colors]
bg = #414141
fg = #d3d7cf
blue = #87ffff
green = #87ff87
orange = #ffbd87
red = #ff8787


[bar/mybar]
monitor = eDP1
bottom = false
width = 100%
height = 32
background = ${colors.bg}
foreground = ${colors.fg}

; separate modules with a single space
separator = " "

locale = en_US.UTF-8

font-0 = Dejavu Sans Mono:size=11;2

tray-position = right
tray-detached = false
tray-maxsize = 20

underline-size = 2

; modules
modules-left = bspwm
modules-center = date
modules-right = battery volume

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
poll-interval = 5
time-format = %H:%M

label-discharging = b:%percentage%%

label-charging = b:%percentage%%
label-charging-foreground = ${colors.green}

label-full = b:%percentage%%
label-full-foreground = ${colors.blue}

[module/bspwm]
type = internal/bspwm
format = <label-state> <label-mode>
; show workspaces from all monitors
pin-workspaces = false

enable-click = true
label-focused-underline = ${colors.green}

label-occupied = " %name%"
label-occupied-foreground = ${colors.green}

label-monocle = " M "
label-monocle-foreground = ${colors.bg}
label-monocle-background = ${colors.red}

label-urgent = " %name%"
label-urgent-foreground = ${colors.orange}
label-urgent-underline = ${colors.orange}

label-empty = " +"

[module/date]
type = internal/date
interval = 1.0
date = %a, %b %d, %Y
time = %H:%M
date-alt = %A
time-alt = %H:%M
label = %date% - %time%

[module/volume]
type = internal/volume
master-mixer = Master
label-volume = v:%percentage%%
label-muted = v:muted
label-muted-foreground = ${colors.red}
