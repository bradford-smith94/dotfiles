##Basic Conky Settings##
background no
update_interval 1.0

cpu_avg_samples 2
net_avg_samples 2

double_buffer yes
no_buffers yes

##Window Settings##
own_window yes
own_window_type desktop
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual yes
own_window_argb_value 255

border_width 1
minimum_size 180 700

alignment top_right
gap_x 5
gap_y 5

##Graphics Settings##
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
out_to_console no
out_to_stderr no
extra_newline no
stippled_borders 0
use_spacer none
show_graph_scale no
show_graph_range no

##Text Settings##
use_xft yes
xftfont DejaVu Sans Mono:size=12
uppercase no
default_color white

#archlinux blue
color1 1793D0

##Text Section##
TEXT
$nodename - $sysname $kernel on $machine
$hr
${color1}Uptime:$color $uptime
${color1}Frequency (in MHz):$color $freq
${color1}Frequency (in GHz):$color $freq_g
${color1}RAM Usage:$color $mem/$memmax - $memperc% ${membar 4}
${color1}Swap Usage:$color $swap/$swapmax - $swapperc% ${swapbar 4}
${color1}CPU Usage:$color $cpu% ${cpubar 4}
${color1}Processes:$color $processes  ${color1}Running:$color $running_processes
$hr
${color1}File systems:
 / $color${fs_used /}/${fs_size /} ${fs_bar 6 /}
${color1} /boot $color${fs_used /boot}/${fs_size /boot} ${fs_bar 6 /boot}
${color1} /home $color${fs_used /home}/${fs_size /home} ${fs_bar 6 /home}
${color1}Networking:
Up:$color ${upspeed wlo1} ${color1} Down:$color ${downspeed wlo1}
$hr
${color1}Name              PID   CPU%   MEM%
${color darkgrey} ${top name 1} ${top pid 1} ${top cpu 1} ${top mem 1}
${color darkgrey} ${top name 2} ${top pid 2} ${top cpu 2} ${top mem 2}
${color darkgrey} ${top name 3} ${top pid 3} ${top cpu 3} ${top mem 3}
${color darkgrey} ${top name 4} ${top pid 4} ${top cpu 4} ${top mem 4}
